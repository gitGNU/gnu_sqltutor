-- id="151" dataset="nobelova_cena" category="select" points="1"
-- 
-- Uveďte nositele Nobelovy ceny za rok 1950.

SELECT laureat
  FROM laureati
 WHERE rok = 1950

-- id="152" dataset="nobelova_cena" category="select" points="2"
-- 
-- Kdo získal Nobelovu cenu za literaturu v roce 1962?

SELECT laureat
  FROM laureati
 WHERE rok = 1962
   AND obor = 'Literatura'


-- id="153" dataset="nobelova_cena" category="select" points="2"
-- 
-- Uveďte rok a obor ve kterém získal Nobelovu cenu 'Albert Einstein'.

SELECT rok, obor
  FROM laureati
 WHERE laureat='Albert Einstein'


-- id="154" dataset="nobelova_cena" category="select" points="2"
-- 
-- Uveďte jména nositelů Nobelovy ceny míru od roku 2000 (včetně).

SELECT laureat
  FROM laureati
 WHERE obor='Mír'
   AND rok >= 2000


-- id="155" dataset="nobelova_cena" category="select" points="2"
-- 
-- Uveďte všechny údaje (rok, obor, laureat) o laureátech Nobelovy
-- ceny míru z let 1980 až 1989.

SELECT rok, obor, laureat
  FROM laureati
 WHERE obor = 'Mír'
   AND rok BETWEEN 1980 AND 1989;


-- id="156" dataset="nobelova_cena" category="select" points="3"
-- 
-- Uveďte všechny údaje (rok, obor, laureat) o "prezinetských"
-- laureátech ('Theodore Roosevelt', 'Woodrow Wilson', 'Jed Bartlet',
-- 'Jimmy Carter')

SELECT rok, obor, laureat FROM laureati
 WHERE laureat IN ('Theodore Roosevelt', 'Woodrow Wilson', 
                  'Jed Bartlet', 'Jimmy Carter')


-- id="157" dataset="nobelova_cena" category="select" points="3"
-- 
-- Uveďte laureáty, jejichž jméno je John.

SELECT DISTINCT laureat
  FROM laureati
 WHERE laureat LIKE 'John %' OR laureat LIKE '% John %';


