-- id="158" dataset="nobelova_cena" category="aggregate" points="4"
-- 
-- Kdo získal Nobelovu cenu více než jedenkrát?

SELECT laureat
  FROM laureati
 GROUP BY laureat
HAVING count(*) > 1;


-- id="159" dataset="nobelova_cena" category="aggregate|subselect" points="6"
-- 
-- Kdo získal Nobelovu cenu více než jedenkrát? Uveďte rok, obor a
-- jméno laureáta.

SELECT rok, obor, laureat
  FROM laureati
 WHERE laureat IN (SELECT laureat
                     FROM laureati
                    GROUP BY laureat
                  HAVING count(*) > 1);


-- id="160" dataset="nobelova_cena" category="aggregate|subselect|derivedtable" points="13"
-- 
-- Kdo získal Nobelovu cenu ve více oborech? Uveďte rok, obor a
-- jméno laureáta.

SELECT A.rok, A.obor, A.laureat
  FROM laureati AS A
       JOIN 
       laureati AS B
       ON A.laureat=B.laureat
 GROUP BY A.rok, A.obor, A.laureat
HAVING count(distinct B.obor) > 1
 ORDER BY A.rok;

